---
interface Props {
  variant: "success" | "note" | "caution" | "danger";
  text: string;
}
const { variant, text } = Astro.props;
---

<span class={`badge ${variant}`}>
  {text}
</span>

<style>
.badge {
  border-radius: 0.25rem;
  margin-right: 0.5em;
  font-size: 0.9rem;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  font-weight: 500;
  display: inline-block;
  line-height: 1;
  overflow-wrap: anywhere;
  padding: 0.15rem 0.5rem;
  margin: 0 0.05rem;
}

.success {
  background-color: #28650b;
  color: #ffffff;
  border: 1px solid #4fdf0c;
}

.note {
  background-color: #0f1c8a;
  color: #ffffff;
  border: 1px solid #3d50f5;
}

.caution {
  background-color: #f5bb3d;
  color: #000000;
  border: 1px solid #a67c00;
  font-weight: 600;
}

.danger {
  background-color: #8a0f3a;
  color: #ffffff;
  border: 1px solid #f53d7d;
}
</style>