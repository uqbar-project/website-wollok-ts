---
import comunidadWollok from "../../../assets/hackathon_2024_utn.png";
import { Image } from "astro:assets";

// Get current locale
const currentLocale = Astro.currentLocale || 'es';
const isEnglish = currentLocale === 'en';

// Load translations
const translations = isEnglish 
  ? await import('../../i18n/en.json')
  : await import('../../i18n/es.json');

const t = translations.default;
---

<div class="community-main">
  <h2>{t["landing.community.title"]}</h2>
  <div class="community-container">
    <Image class="class-img" src={comunidadWollok} alt={isEnglish ? "Wollok Community" : "Comunidad Wollok"}/>
    <div class="community-content">
      <p set:html={t["landing.community.p1"]} />
        <ul>
          <li set:html={t["landing.community.li1"]} />
          <li set:html={t["landing.community.li2"]} />
          <li set:html={t["landing.community.li3"]} />
        </ul>
      <p set:html={t["landing.community.p2"]} />
      <p set:html={t["landing.community.p3"]} />
    </div>
  </div>
</div>

<style>
.community-main {
  margin: 1rem 1rem;
  padding: 4rem 4rem;
}

.community-main h2 {
  margin: 1rem 0 0 0;
}

.community-container {
  display: grid;
  grid-template-columns: 1.4fr 2fr;
  gap: 5rem;
  font-size: 1.2em;
}

.class-img {
  border-radius: 10px;
  height: auto;
  width: 100%;
  opacity: 0.9;
  margin: 1rem 0;
}

.community-content {
  margin-top: 0 !important;
}

a {
  color: var(--sl-color-accent) !important;
}

a:hover {
  color: var(--sl-color-accent-hover) !important;
}

@media(max-width: 50em) {
  .community-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: 1.2em;
  }

}
</style>
