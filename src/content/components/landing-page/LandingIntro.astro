---
import CallToAction from "@astrojs/starlight/components/CallToAction.astro";
import MainRepl from "./repl/MainRepl.astro";
---
<div>
  <div class="intro-container">
    <div class="welcome">
      <div class="titulo">
        <h1>Wollok</h1>
        <p id="wollok-intro-subtitle">Aprendiendo a programar con objetos</p>
      </div>
      <div class="actions">
        <CallToAction
          link="/getting_started/installation"
          variant="primary"
          icon={{ type: "icon", name: "rocket" }}
          attrs={{title: "Instalate Wollok en tu máquina en breves pasos siguiendo este link"}}
        >
          Instalar/Actualizar
        </CallToAction>
        <CallToAction link="/documentation/language" variant="secondary" attrs={{title: "Si estás buscando cómo implementar un concepto o ayuda sobre los mensajes que podés mandar a un objeto, seguí este link"}}>
          Documentación
        </CallToAction>
        <CallToAction link="https://youtu.be/AwkKZ41U6WE" variant="secondary" attrs={{title: "Acá Fer nos trae una demo Wollok en VSCode usando la versión 0.2.0"}}>
          Tour
        </CallToAction>
      </div>
    </div>
    <MainRepl />
  </div>
</div>

<style>
  .intro-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    padding: 1rem 2rem;
    gap: 15px;
    height: 35%;
  }

  #wollok-intro-subtitle {
    margin-top: 0;
    font-size: 1.3rem;
  }

  .welcome {
    display: flex;
    flex-direction: row;
    gap: 3rem;
    width: 100%;
    align-items: end;
    margin-bottom: 0;
  }

  .titulo {
    display: flex;
    flex-direction: column;
    gap: 0;
    align-self: start;
  }

  .actions {
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }

  .pepita-example {
    width: 100%;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 2rem;
  }

  .action {
    justify-content: center;
  }

  .diagrama {
    margin-top: 0 !important;
  }

  .diagrama > img {
    height: auto;
    width: 100%;
  }

  @media (max-width: 50em) {
    .intro-container {
      justify-content: center;
      padding: 1rem 1rem;
    }
    
    .welcome {
      display: flex;
      flex-direction: column;
      text-align: start;
      gap: 0;
    }

    #wollok-intro-subtitle div.titulo {
      text-align: start;
    }

    .actions {
      gap: 0.5rem;
      align-self: center;
    }

    .pepita-example {
      display: flex;
      flex-direction: column;
    }
  }
</style>
