---
import MainRepl from "./repl/MainRepl.astro";
import { Rocket, Book, Video } from 'lucide-react';

// Get current locale and load translations
const currentLocale = Astro.currentLocale || 'es';
const isEnglish = currentLocale === 'en';

// Load translations
const translations = isEnglish 
  ? await import('../../i18n/en.json')
  : await import('../../i18n/es.json');

const t = translations.default;
---
<div>
  <div class="intro-container">
    <div class="welcome">
      <div class="titulo">
        <h1>Wollok</h1>
        <p id="wollok-intro-subtitle">{t["landing.subtitle"]}</p>
      </div>
      <div class="actions">
        <a href={isEnglish ? "/en/getting_started/installation" : "/getting_started/installation"} title={isEnglish ? "Install Wollok on your machine in a few steps by following this link" : "Instalate Wollok en tu máquina en breves pasos siguiendo este link"} class="btn primary">
          <Rocket className="icon" /> {t["landing.install"]}
        </a>
        <a href={isEnglish ? "/en/documentation/language" : "/documentation/language"} title={isEnglish ? "If you're looking for how to implement a concept or help with messages you can send to an object, follow this link" : "Si estás buscando cómo implementar un concepto o ayuda sobre los mensajes que podés mandar a un objeto, seguí este link"} class="btn secondary">
          <Book className="icon" /> {t["landing.documentation"]}
        </a>
        <a href="https://youtu.be/AwkKZ41U6WE" title={isEnglish ? "Here Fer brings us a Wollok demo in VSCode using version 0.2.0" : "Acá Fer nos trae una demo Wollok en VSCode usando la versión 0.2.0"} class="btn secondary">
          <Video className="icon" /> {t["landing.tour"]}
        </a>
      </div>
    </div>
    <MainRepl />
  </div>
</div>

<style>
  .intro-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    padding: 1rem 2rem;
    gap: 15px;
    height: 35%;
  }

  #wollok-intro-subtitle {
    margin-top: 0;
    font-size: 1.3rem;
  }

  .welcome {
    display: flex;
    flex-direction: row;
    gap: 3rem;
    width: 100%;
    align-items: end;
    margin-bottom: 0;
  }

  .titulo {
    display: flex;
    flex-direction: column;
    gap: 0;
    align-self: start;
  }

  .actions {
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }

  .btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
  }

  .btn:hover {
    opacity: 0.8;
    color: var(--sl-text-accent-hover) !important;
  }
  
  .btn.primary {
    background-color: var(--sl-color-accent);
    color: var(--sl-color-black);
  }

  .btn.secondary {
    background-color: var(--sl-background-secondary);
    color: var(--sl-text-secondary);
  }

  .icon {
    width: 1em;
    height: 1em;
  }

  @media (max-width: 50em) {
    .intro-container {
      justify-content: center;
      padding: 1rem 1rem;
    }
    .welcome {
      display: flex;
      flex-direction: column;
      text-align: start;
      gap: 0;
    }
    #wollok-intro-subtitle div.titulo {
      text-align: start;
    }
    .actions {
      gap: 0.5rem;
      align-self: center;
    }
  }
</style>